<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<Pane layoutY="73.0" prefHeight="184.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="ajour.ui.TrackerOverviewController">
    <Text layoutX="32.0" layoutY="100.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Today:" textAlignment="RIGHT">
        <font>
            <Font name="System Bold" size="14.0"/>
        </font>
    </Text>
    <Text layoutX="32.0" layoutY="125.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Yesterday:" textAlignment="RIGHT">
        <font>
            <Font name="System Bold" size="14.0"/>
        </font>
    </Text>
    <Text layoutX="32.0" layoutY="150.0" strokeType="OUTSIDE" strokeWidth="0.0" text="This week:" textAlignment="RIGHT">
        <font>
            <Font name="System Bold" size="14.0"/>
        </font>
    </Text>
    <Text fx:id="todayValue" layoutX="118.0" layoutY="99.0" strokeType="OUTSIDE" strokeWidth="0.0" text="NaN"
          textAlignment="RIGHT">
        <font>
            <Font name="System Bold" size="14.0"/>
        </font>
    </Text>
    <Text fx:id="yesterdayValue" layoutX="118.0" layoutY="124.0" strokeType="OUTSIDE" strokeWidth="0.0" text="NaN"
          textAlignment="RIGHT">
        <font>
            <Font name="System Bold" size="14.0"/>
        </font>
    </Text>
    <Text fx:id="weekValue" layoutX="118.0" layoutY="149.0" strokeType="OUTSIDE" strokeWidth="0.0" text="NaN"
          textAlignment="RIGHT">
        <font>
            <Font name="System Bold" size="14.0"/>
        </font>
    </Text>
    <Text fx:id="trackerName" layoutX="19.0" layoutY="64.0" text="TrackerName">
        <font>
            <Font name="System Bold" size="36.0"/>
        </font>
    </Text>
    <TextField fx:id="addEntryInput" layoutX="164.0" layoutY="81.0" prefHeight="27.0" prefWidth="98.0"
               promptText="Today's entry" style="-fx-background-color: transparent; -fx-border-style: solid;"/>
    <Button fx:id="addEntryButton" layoutX="272.0" layoutY="82.0" mnemonicParsing="false" onAction="#addEntry"
            text="+"/>
    <Button fx:id="undoEntryButton" layoutX="303.0" layoutY="82.0" mnemonicParsing="false" onAction="#undoEntry"
            text="Undo last entry"/>
</Pane>
